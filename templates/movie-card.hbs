{{#each this}}
<div class="col xl4 l6 m6 s12 movieCard" id="card--{{id}}">
	<div class="card sticky-action" id="cardSticky{{id}}">
		<div class="card-image waves-effect waves-block waves-light" id="cardImage{{id}}">
		  <img class="activator icon{{id}}" src="https://image.tmdb.org/t/p/w500{{poster_path}}">
		</div>
		<div class="card-content">
		<span class="card-title activator grey-text text-darken-4 icon{{id}} col s10 truncate">{{original_title}}</span>
		<!-- Modal Trigger -->
		  <a class="waves-effect waves-light btn modal-trigger modalBtn{{@index}}" href="#modal{{@index}}">Modal</a>

		  <!-- Modal Structure -->
		  <div id="modal{{@index}}" class="modal">
		    <div class="modal-content">
		      <h4>Modal Header</h4>
		      <p>A bunch of text</p>
		    </div>
		    <div class="modal-footer">
		      <a href="!#" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
		    </div>
		  </div>
		</div>
		<div class="card-reveal" id="reveal{{id}}">
		  <span class="card-title grey-text text-darken-4">Overview<i class="material-icons right">close</i></span>
		<span>({{year}})</span>
		  <p>{{overview}}</p>
		<span class="card-title grey-text text-darken-4">Cast</span>
		<p id="castReveal{{id}}"></p>
		</div>
		<div id="rateYo{{@index}}" class="rateYo"></div>
	</div>
</div>
{{/each}}
